<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BetBookGamingMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BetBookGamingMobile.Views"
    xmlns:local="clr-namespace:BetBookGamingMobile"
    Shell.FlyoutBehavior="Disabled">
    
    <ShellContent
                Title="Login"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
    
    <TabBar>

        <Tab Title="Games" 
                 Icon="footballsolid.svg">

            <ShellContent
                        Title="Available Games"
                        ContentTemplate="{DataTemplate views:AvailableGamesPage}"
                        Route="AvailableGamesPage"/>

        </Tab>

        <Tab Title="Bet Slip" 
                 Icon="betslipsolid.svg">

            <ShellContent
                    Title="Potential Wagers"
                    ContentTemplate="{DataTemplate views:BetSlipPage}"
                    Route="BetSlipPage" />

        </Tab>

        <Tab Title="My Bets" 
                 Icon="booksolid.svg">

            <ShellContent
                    Title="My Bets"
                    ContentTemplate="{DataTemplate views:MyBetsPage}"
                    Route="MyBetsPage" />

        </Tab>

    </TabBar>

</Shell>
